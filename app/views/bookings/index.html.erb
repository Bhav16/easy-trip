<div class="container mt-4">
  <h1> All Bookings </h1>
    <% @bookings.each do |booking| %>
     <div class="container mt-4 pl-0 pr-0">
     <h4> Your <%= booking.activity.category.name %> Trip</h4>
       <div class="booking-details-card">
       <div class="card-icon">
       <% booking_category = booking.activity.category.name%>
       <% case booking_category%>
       <% when "Ecology" %>
       <i class="fas fa-utensils"></i>
       <% when "Sea & Water" %>
       <i class="fab fa-pagelines"></i>
       <% when "Culture & History" %>
       <i class="fab fa-pagelines"></i>
       <% when "Arts & Crafts" %>
       <i class="fab fa-pagelines"></i>
       <% when "Nature & Adventure" %>
       <i class="fab fa-pagelines"></i>
       <% when "Adrenaline" %>
       <i class="fab fa-pagelines"></i>
       <% when "Food & Drinks" %>
       <i class="fab fa-pagelines"></i>
       <% when "Team Activities" %>
       <i class="fas fa-utensils"></i>

       <% end %>
       </div>

          <div class="booking-details-card-infos">

         <p><span>Booked on: </span> <%= booking.activity_date %></p>
         <p><span>Number of participant: </span> <%= (booking.number_of_participants) %></p>
         <p><span>Total price: </span>Rs <%= ((booking.activity.price).to_i) * booking.number_of_participants.to_i %> </p>
       </div>
       </div>
    </div>
   <%end%>

   <div class="mt-4">
      <%= link_to "Back", root_path, class: 'btn btn-primary btn-lg btn-custom' %>
    </div>
</div>
