<div class="container mt-4">
        <h4> Your <%= @booking.activity.category.name %> Trip</h4>

        <div class="booking-details-card">
          <div class="card-icon">
            <% booking_category = @booking.activity.category.name%>
            <% case booking_category%>
            <% when "Ecology" %>
              <i class="fas fa-seedling"></i>
            <% when "Sea & Water" %>
              <i class="fas fa-swimmer"></i>
            <% when "Culture & History" %>
              <i class="fas fa-monument"></i>
            <% when "Arts & Crafts" %>
              <i class="fas fa-palette"></i>
            <% when "Nature & Adventure" %>
              <i class="fas fa-hiking"></i>
            <% when "Adrenaline" %>
              <i class="fas fa-running"></i>
            <% when "Food & Drinks" %>
              <i class="fas fa-utensils"></i>
            <% else %>
              <i class="fas fa-users"></i>
            <% end %>
          </div>

          <div class="booking-details-card-infos">
            <p><span>Booked for: </span> <%= @booking.activity_date %></p>
            <p><span>Number of participants: </span> <%= (@booking.number_of_participants) %></p>
            <p><span>Total price: </span>Rs <%= ((@booking.activity.price).to_i) * @booking.number_of_participants.to_i %> </p>
          </div>
        </div>

        <% # Back and all bookings buttons %>

        <div class=" container mt-4 pl-0">
          <%= link_to "Back", root_path, class: 'btn btn-primary btn-lg btn-custom' %>
          <%= link_to "All Bookings", bookings_path, class: 'btn btn-primary btn-lg btn-custom' %>
        </div>

        <% #  Mapbox %>

    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
